<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <solid android:color="#1d1d1d" />
            <stroke android:width="1dp" android:color="#28ffffff"/>
        </shape>
    </item>
    <item android:bottom="0dp" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <stroke android:width="1dp" android:color="#29ffffff"/>
        </shape>
    </item>
    <item android:right="8dp">
        <bitmap
            android:gravity="center|right"
            android:src="@drawable/icon_arrow_drop_up"
            android:tint="@color/white_color_opacity" />
    </item>
</layer-list>