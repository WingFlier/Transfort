<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wd="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llOrder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4sp"
                android:text="№ РТ-000465608"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tvOrderCreateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="4sp"
                android:text="от 24 октября"
                android:textColor="#6d6d6d"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/vehicle_properties"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4sp"
                android:text="Требования к авто"
                android:textColor="#455a64"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <ru.wdsoft.ui.field.FieldOrderType
                android:id="@+id/fldOrderType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Тип перевозки"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldVehicleType
                android:id="@+id/fldVehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Класс авто"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldBodyType
                android:id="@+id/fldBodyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Тип кузова"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldInteger
                android:id="@+id/fldPassangerCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Кол-во пассажиров"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldVehicleModel
                android:id="@+id/fldVehicleModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Модель"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldText
                android:id="@+id/fldComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Комментарий"
                wd:obligatory="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/duration"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4sp"
                android:text="Продолжительность"
                android:textColor="#455a64"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <ru.wdsoft.ui.field.FieldDateTime
                android:id="@+id/fldDateStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Начало"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldDateTime
                android:id="@+id/fldDateEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Окончание"
                wd:obligatory="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="6sp"
                android:text="28 часов 30 минут"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4sp"
                android:text="География"
                android:textColor="#455a64"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <ru.wdsoft.ui.field.FieldText
                android:id="@+id/fldAddressStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Подача"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldText
                android:id="@+id/fldAddressEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Завершение"
                wd:obligatory="true"/>

            <CheckBox
                android:id="@+id/cbTheSameAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6sp"
                android:text="Совпадает с адресом подачи"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/requester"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4sp"
                android:text="Заказчик"
                android:textColor="#455a64"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <ru.wdsoft.ui.field.FieldCustomer
                android:id="@+id/fldCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Организация"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldText
                android:id="@+id/fldContactPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Контактное лицо"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldPhone
                android:id="@+id/fldPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Телефон"
                wd:obligatory="true"/>

            <ru.wdsoft.ui.field.FieldEmail
                android:id="@+id/fldEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                wd:efld_caption="Почта"
                wd:obligatory="true"/>

            <TextView
                android:id="@+id/tvUseProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6sp"
                android:text="Использовать данные из профиля"
                android:textColor="#689eb8"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/butPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="2sp"
                    android:text="Посмотреть"
                    android:textColor="#689eb8"
                    android:textSize="14sp"
                    android:textStyle="normal"/>

                <Button
                    android:id="@+id/butCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#689eb8"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="2sp"
                    android:text="Опубликовать"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="normal"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>