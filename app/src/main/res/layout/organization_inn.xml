<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wd="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_organization_inn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_organization_inn_title"
            style="@style/LightDarkTextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/organization_inn"/>

        <TextView
            android:id="@+id/tv_organization_inn_star"
            style="@style/RedTextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/star"/>


    </LinearLayout>

    <ru.wdsoft.ui.field.FieldInteger
        android:id="@+id/fld_organization_inn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        wd:efld_caption="Инн"/>
</LinearLayout>
